        "html": "<div style=\"max-width: 680px; margin:auto; padding: 10px 0; display:flex; flex-direction:column; justify-content: center; align-items: center; background-color: #f7f7f7;\">\n  <p style=\"text-align:center\">Inserisci i valori richiesti per calcolare le quantità di prodotto e di acqua necessarie\n    per una corretta\n    diluizione, a seconda del rapporto desiderato e del volume della soluzione che vuoi ottenere!<\/p>\n  <div style=\"display:flex; flex-direction:row; justify-content: space-evenly;\">\n    <div style=\"margin-bottom: 20px; display: flex; flex-direction: column; justify-content:baseline; align-items:center;\">\n      <h3 style=\"text-transform:uppercase;\"><strong>Parti di Prodotto<\/strong><\/h3>\n      <input placeholder=\"Inserisci il valore\" id=\"valoreProdotto\" step=\"1\" min=\"0\" type=\"number\" style=\"padding:5px 10px; height: 40px;\"><span id=\"erroreProdotto\" style=\"color:#ff4a4a; display:none;\">*inserisci questo valore!<\/span>\n    <\/div>\n    <div style=\"margin: 10px\">\n      <h3>:<\/h3>\n    <\/div>\n    <div style=\"margin-bottom: 20px; display: flex; flex-direction: column; justify-content:baseline; align-items: center;\">\n      <h3 style=\"text-transform:uppercase;\"><strong>Parti di Acqua<\/strong><\/h3>\n      <input placeholder=\"Inserisci il valore\" id=\"valoreAcqua\" step=\"1\" min=\"0\" type=\"number\" style=\"padding:5px 10px; height: 40px;\"><span id=\"erroreAcqua\" style=\"color:#ff4a4a; display:none;\">*inserisci\n        questo valore!<\/span>\n    <\/div>\n  <\/div>\n  <div style=\"margin-bottom: 20px; display: flex; flex-direction: column; justify-content:center; align-items: center;\">\n    <h3 style=\"text-transform:uppercase;\"><strong>Volume della soluzione finale<\/strong><\/h3>\n    <div style=\"display: flex; flex-direction: row; justify-content:center; align-items: center;\">\n      <input placeholder=\"Inserisci il valore\" id=\"capacitàContenitore\" step=\"1\" min=\"0\" type=\"number\" style=\"padding:5px 10px; height: 40px;\">\n      <select id=\"unitàVolume\" style=\"padding:5px 10px; height: 40px;\">\n        <option value=\"ml\">ml<\/option>\n        <option value=\"l\">L<\/option>\n      <\/select>\n    <\/div>\n    <div style=\"margin-bottom: 20px; display: flex; flex-direction: row; justify-content:center; align-items: center;\">\n      <span id=\"erroreVolume\" style=\"color:#ff4a4a; display:none;\">*inserisci questo valore!<\/span>\n    <\/div>\n\n  <\/div>\n\n  <div style=\"display:flex; flex-direction:row; justify-content: space-evenly; align-items: center;\">\n    <button style=\"max-width: 500px; min-width: 200px; margin: 10px; padding:10px; background-color: #b7b9bc; color:#ffffff; border:none; text-align: center; font-weight:600; text-transform:uppercase;\" onclick=\"resetForm()\">Cancella i valori<\/button>\n    <button style=\"max-width: 500px; min-width: 200px; margin: 10px; padding:10px; background-color: #4bdd0e; color:#ffffff; border:none; text-align: center; font-weight:600; text-transform:uppercase\" onclick=\"calcolaDiluizione()\">Calcola la tua Diluizione<\/button>\n  <\/div>\n  <div id=\"risultato\">\n  <\/div>\n<\/div>\n\n\n<script>\n  function calcolaDiluizione() {\n    const valoreProdotto = parseFloat(document.getElementById('valoreProdotto').value);\n    const valoreAcqua = parseFloat(document.getElementById('valoreAcqua').value);\n    let capacitàContenitore = parseFloat(document.getElementById('capacitàContenitore').value);\n    const unitàVolume = document.getElementById('unitàVolume').value;\n    let validazione = true;\n    if (isNaN(valoreProdotto) || valoreProdotto <= 0) {\n      document.getElementById('erroreProdotto').style.display = 'inline';\n      validazione = false;\n    } else {\n      document.getElementById('erroreProdotto').style.display = 'none';\n    }\n    if (isNaN(valoreAcqua) || valoreAcqua <= 0) {\n      document.getElementById('erroreAcqua').style.display = 'inline';\n      validazione = false;\n    } else {\n      document.getElementById('erroreAcqua').style.display = 'none';\n    }\n    if (isNaN(capacitàContenitore) || capacitàContenitore <= 0) {\n      document.getElementById('erroreVolume').style.display = 'inline';\n      validazione = false;\n    } else {\n      document.getElementById('erroreVolume').style.display = 'none';\n    }\n    if (validazione) {\n      if (unitàVolume === 'l') {\n        capacitàContenitore *= 1000; \/\/ converti litri in millilitri\n      }\n      const rapportoTotale = valoreProdotto + valoreAcqua;\n      const quantitàProdotto = (valoreProdotto \/ rapportoTotale) * capacitàContenitore;\n      const quantitàAcqua = (valoreAcqua \/ rapportoTotale) * capacitàContenitore;\n      let unitàRisultato = 'ml';\n      if (unitàVolume === 'l') {\n        unitàRisultato = 'ml (litri)';\n      }\n      document.getElementById('risultato').innerHTML = `<p style=\"text-align:center\">Versa <strong>${quantitàProdotto.toFixed(2)} ml di prodotto<\/strong> in <strong>${quantitàAcqua.toFixed(2)} ml di acqua<\/strong> per ottenere una diluizione perfetta!<\/p>`;\n    } else {\n      document.getElementById('risultato').innerHTML = '';\n    }\n  }\n\n  function resetForm() {\n    document.getElementById('valoreProdotto').value = '';\n    document.getElementById('valoreAcqua').value = '';\n    document.getElementById('capacitàContenitore').value = '';\n    document.getElementById('unitàVolume').value = 'ml';\n    document.getElementById('risultato').innerHTML = '';\n    document.getElementById('erroreProdotto').style.display = 'none';\n    document.getElementById('erroreAcqua').style.display = 'none';\n    document.getElementById('erroreVolume').style.display = 'none';\n  }\n<\/script>",
