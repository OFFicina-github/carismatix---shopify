      assign busto_pollici = 'Torace (pollici)'
      assign vita_pollici = 'Vita (pollici)'
      assign fianchi_pollici = 'Bacino (pollici)'
      assign altezza_cm = 'Altezza (cm)'
      assign busto_cm = 'Torace (cm)'
      assign vita_cm = 'Vita (cm)'
