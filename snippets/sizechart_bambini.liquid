      assign vita_cm = 'Cintura (cm)'
      assign fianchi_cm = 'Caderas (cm)'
      assign eta = 'Edad'

    when 'de'
      assign chart_title = 'Größentabelle'
      assign link_chart_txt = 'Gehen Sie zu allen Größentabellen'
      assign link_chart_prefix = '/de'
      assign cm = 'cm'
      assign pollici = 'Zoll'
      assign altezza_pollici = 'Höhe (Zoll)'
      assign busto_pollici = 'Brustumfang (Zoll)'
      assign vita_pollici = 'Taille (Zoll)'
      assign fianchi_pollici = 'Hüften (Zoll)'
      assign altezza_cm = 'Höhe (cm)'
      assign busto_cm = 'Brustumfang (cm)'
      assign vita_cm = 'Taille (cm)'
      assign fianchi_cm = 'Hüften (cm)'
      assign eta = 'Alter'

    else
      assign chart_title = 'Size guide'
      assign link_chart_txt = 'Go to all size guides'
      assign link_chart_prefix = ''
      assign cm = 'cm'
      assign pollici = 'inches'
      assign altezza_pollici = 'Height (inches)'
      assign busto_pollici = 'Bust (inches)'
      assign vita_pollici = 'Waist (inches)'
      assign fianchi_pollici = 'Hips (inches)'
      assign altezza_cm = 'Height (cm)'
      assign busto_cm = 'Bust (cm)'
      assign vita_cm = 'Waist (cm)'
      assign fianchi_cm = 'Hips (cm)'
      assign eta = 'Age'
  endcase
%}

