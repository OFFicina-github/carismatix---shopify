{% liquid
  assign current_language = request.locale.iso_code

  case current_language
    when 'it'
      assign chart_title = 'Guida alle taglie'
      assign link_chart_txt = 'Vai a tutte le guide taglie'
      assign link_chart_prefix = '/it'
      assign cm = 'cm'
      assign pollici = 'pollici'
      assign vita_pollici = 'Vita (pollici)'
      assign vita_cm = 'Vita (cm)'
      assign scarpe = 'Scarpe'
      assign cinture = 'Cinture'

      assign guanti = 'Guanti'
      assign guanti_italia = 'ITALIA'
      assign guanti_cee = 'CEE'
      assign guanti_extracee = 'EXTRA CEE'
      assign guanti_cm = 'CM'
      assign guanti_desc = 'Determinare con precisione la misura dei tuoi guanti è estremamente semplice. Con un metro da sarto, misura la distanza dalla punta del medio al palmo. Nella tabella di corrispondenza riportata potrai trovare la tua taglia.'
      assign gunati_desc_titolo = 'Come prendere le misure:'

    when 'en'
      assign chart_title = 'Size guide'
      assign link_chart_txt = 'Go to all size guides'
      assign link_chart_prefix = ''
      assign cm = 'cm'
      assign pollici = 'inches'
      assign vita_pollici = 'Waist (inches)'
      assign vita_cm = 'Waist (cm)'
      assign scarpe = 'Shooes'
      assign cinture = 'Belts'

      assign guanti = 'Gloves'
      assign guanti_italia = 'ITALIY'
      assign guanti_cee = 'CEE'
      assign guanti_extracee = 'EXTRA CEE'
      assign guanti_cm = 'CM'
      assign guanti_desc = 'Determining your glove size accurately is very simple. Using a tape measure, measure the distance from the tip of your middle finger to the palm of your hand. In the provided size chart, you can find your corresponding size.'
      assign gunati_desc_titolo = 'How to Take Measurements:'

    when 'fr'
      assign chart_title = 'Guide des tailles'
      assign link_chart_txt = 'Accédez à tous les guides de tailles'
      assign link_chart_prefix = '/fr'
      assign cm = 'cm'
      assign pollici = 'pouces'
      assign vita_pollici = 'Taille (pouces)'
