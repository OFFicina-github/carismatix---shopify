{
{% if customer %}
    orders_count: {{ customer.orders_count| default: 0 }}, // storico di ordini del cliente
    total_spent: {{ customer.total_spent | default: 0 }}, // totale speso storico
    customerFirstName: "{{ customer.first_name }}", // Nome in registrazione
    customerLastName: "{{ customer.last_name }}", // Cognome in registrazione
    customerFirstNameHash: "{{ customer.first_name | sha256 }}", // hash 256 del nome in registrazione
    customerLastNameHash: "{{ customer.last_name | sha256 }}", // hash 256 del cognome in registrazione
    customerEmail: "{{ customer.email }}", // email in registrazione
    customerEmailHash: "{{ customer.email | sha256 }}", // email con hash 256 in registrazione
    {% for address in customer.addresses %}
        customerBillingAddress{{ forloop.index }}: "{{ address.address1 | append: " " | append: address.address2 }}", // indirizzo nei campi fatturazione
        customerBillingCity{{ forloop.index }}: "{{ address.city }}",  // città nei campi fatturazione
        customerBillingPostcode{{ forloop.index }}: "{{ address.zip }}",  // cap nei campi fatturazione
        customerBillingCountry{{ forloop.index }}: "{{ address.country_code }}", // country nei campi fatturazione
        customerBillingPhone{{ forloop.index }}: "{{ address.phone }}",	// telefono nei campi fatturazione.
        customerBillingCityHash{{ forloop.index }}: "{{ address.city | sha256 }}", // hash 256 della città nei campi fatturazione
        customerBillingPostcodeHash{{ forloop.index }}: "{{ address.zip | sha256 }}", // hash 256 del cap nei campi fatturazione
        customerBillingCountryHash{{ forloop.index }}: "{{ address.country_code | sha256 }}", // hash 256 del country nei campi fatturazione
        customerBillingPhoneHash{{ forloop.index }}: "{{ address.phone | sha256 }}", // hash 256 del telefono nei campi fatturazione
    {% endfor %}
    userID: {{ customer.id | default: 0 }}, // ID dell’utente registrato
    type: "{% if customer.b2b? %}b2b{% else %}customer{% endif %}" // qui da mettere solo se c’è una suddivisione di tipologia di utente
{% endif %}
}
