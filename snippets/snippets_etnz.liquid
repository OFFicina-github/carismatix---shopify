<style>
  .prod_card_box {
    grid-template-columns: 25% 25% 25% 25%;
    display: grid;
    background-color: var(--color-bianco);
    transform: translateX(-110vw);
    transition: transform 800ms;
    transition-timing-function: cubic-bezier(1, -0.21, 0, 1.19);
    position: relative;
    z-index: 1;
    @media (max-width: 1199px) {
      grid-template-columns: 37% 37% 37% 37%;
      overflow-x: scroll;
      margin-right: -5rem;
      padding-right: 5rem;
      -ms-overflow-style: none;
      scrollbar-width: none;
      &::-webkit-scrollbar {
        display: none;
      }
    }
    @media (max-width: 749px) {
      grid-template-columns: 65% 65% 65% 65%;
      margin-right: -1.5rem;
      padding-right: 1.5rem;
    }
    &.active {
      transform: translateX(0);
    }
    &:first-of-type {
      margin-bottom: 24px;
    }
  }
</style>

{ "type": "product_list", "id": "prod_list", "label": "Select Products", "limit": 4 }

<section class="prod_card_box">
  {% for product in section.settings.prod_list %}
    <div class="prod_card_item">
      {% render 'card-product', card_product: product %}
    </div>
  {% endfor %}
</section>
