{%- style -%}
  #shopify-section-{{ section.id }} {
    height:100vh;
    height: calc(var(--vh, 1vh) * 100);
    transition: height 300ms ease-in-out;
    position:relative;
    overflow:hidden;
  }
  section.section_overlay_video .container_next p {
    color: var(--color-bianco);
  }
  section.section_overlay_video .container_next h2,
  section.section_overlay_video .container_next h3 {
    color: var(--color-bianco);
  }
  section.section_overlay_video .container_next {
    position:absolute;
    top: 20vh;
    left:0;
    display:flex;
    flex-direction:column;
    gap: 5vw;
    height:fit-content;
    z-index:3;
  }
  section.section_overlay_video .container_next.cont_down {
    bottom:12.5vh;
    top:unset;
    gap: 20px;
    max-width: 50%;
    min-width: 650px;
  }
  section.section_overlay_video > video {
    object-fit: cover;
    object-position: center;
    z-index: -1;
    width: 100%;
  }
  section.section_overlay_video > img {
    display:none;
  }
  @media(min-width:1400px){
    section.section_overlay_video > img {
      position: static !important;
    }
  }
  @media(max-width:999px){
    section.section_overlay_video > video {
      width: 100%;
    }
    section.section_overlay_video .container_next:not(.cont_down) {
      top: 20vh;
    }
    section.section_overlay_video .container_next.cont_down {
      min-width: 100%;
      padding-left: 30px !important;
      padding-right: 90px !important;
    }
  }
  @media(max-width:767px){
    section.section_overlay_video > img {
      height: 60% !important;
    }
  }
  section.section_overlay_video h2.h1.line_h_h1 {
    color: var(--color-bianco)!important;
  }
  section.section_overlay_video.yes_overlay::after {
    content:'';
    display:block;
    position:absolute;
    z-index:2;
    top:0;
    left:0;
    background-color:var(--color-turchese);
    opacity:.5;
  }
  {% if section.settings.video_50 %}
    @media(min-width:1000px) {
      #shopify-section-{{ section.id }} section.section_overlay_video > video {
        width: 40%;
      }
      #shopify-section-{{ section.id }} section.section_overlay_video::after {
        content: none;
      }
      #shopify-section-{{ section.id }} section.section_overlay_video .container_next h2,
      #shopify-section-{{ section.id }} section.section_overlay_video .container_next h3,
      #shopify-section-{{ section.id }} section.section_overlay_video .container_next p,
      #shopify-section-{{ section.id }} section.section_overlay_video .container_next a.btn_next,
      #shopify-section-{{ section.id }} section.section_overlay_video .container_next a.btn_next svg path {
          color: var(--color-nero) !important;
          fill: var(--color-nero) !important;
      }
    }
  {% endif %}
  /*image_cont_extra*/
  @media(min-width:1000px) {
    #shopify-section-{{ section.id }} section.section_overlay_video img.out_cont {
        display:block !important;
        position: absolute !important;
        top: 20vh;
        right: 10vw;
    }
    #shopify-section-{{ section.id }} section.section_overlay_video img.in_cont {
        display:none !important;
    }
  }
  @media(max-width:999px) {
    #shopify-section-{{ section.id }} section.section_overlay_video img.in_cont {
        display:block !important;
    }
    #shopify-section-{{ section.id }} section.section_overlay_video img.out_cont {
        display:none !important;
    }
  }

{%- endstyle -%}

{% liquid
  case section.settings.select_option
    when 'no_overlay'
      assign versioneOverlay = 'no_overlay'
    when 'yes_overlay'
      assign versioneOverlay = 'yes_overlay'
  endcase
%}

<section
  class="section_overlay_video twcss-relative after_overlay zindex-1 twcss-bg-center twcss-bg-cover twcss-h-full {{ versioneOverlay }}"
  style="background-image:url({{ section.settings.img_url }});"
>

  {% if section.settings.img_cont_down %}
    <img class="extra_image out_cont" src="{{ section.settings.img_cont_down | image_url }}" width=100% height=100% alt=SLAM loading=lazy style="object-fit:contain;object-position:center left;max-width: 230px;">
  {% endif %}

  <video
    class="object-cover object-center twcss-absolute twcss-top-0 twcss-right-0 twcss-w-full twcss-h-full"
    autoplay
    loop
    muted
    playsinline
    height="100%"
    width="100%"
  >
    <source src="{{ section.settings.video_url }}" type="video/mp4">
  </video>
  <div class="container_next cont_up">
    <h2 class="h1 italic twcss-uppercase line_h_h1">
      <span class="twcss-block">{{ section.settings.payoff_pt1 }}</span
      ><span class="twcss-block twcss-ml-20">{{ section.settings.payoff_pt2 }}</span
      ><span class="twcss-ml-4 twcss-block">{{ section.settings.payoff_pt3 }}</span>
    </h2>
  </div>
  <div class="container_next cont_down">
    {% if section.settings.img_cont_down %}
      <img class="extra_image in_cont" src="{{ section.settings.img_cont_down | image_url }}" width=100% height=100% alt=SLAM loading=lazy style="object-fit:contain;object-position:center left;max-width:45%;min-width:200px;">
    {% endif %}
    <p class="label twcss-text-white">{{ section.settings.titoletto }}</p>
    <h3 class="twcss-text-white">{{ section.settings.sottotitolo }}</h3>
    <p class="twcss-text-white">{{ section.settings.descrizione }}</p>
    {% for block in section.blocks %}
      {% if block.type == 'link_block' %}
        <a class="twcss-text-w twcss-flex twcss-gap-4 btn_next twcss-items-center" href="{{ block.settings.link_url }}">
          {{ block.settings.link_text }}
          {% render 'icon-arrow-link-custom' -%}
        </a>
      {% endif %}
    {% endfor %}
  </div>
</section>

