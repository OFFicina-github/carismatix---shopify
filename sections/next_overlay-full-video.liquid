  "settings": [
    {
      "type": "text",
      "id": "payoff_pt1",
      "label": "Payoff pt1"
    },
    {
      "type": "text",
      "id": "payoff_pt2",
      "label": "Payoff pt2"
    },
    {
      "type": "text",
      "id": "payoff_pt3",
      "label": "Payoff pt3"
    },
    {
      "type": "text",
      "id": "titoletto",
      "label": "Titoletto"
    },
    {
      "type": "text",
      "id": "sottotitolo",
      "label": "Sottotitlo"
    },
    {
      "type": "text",
      "id": "descrizione",
      "label": "Descrizione"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "URL del Video background"
    },
    {
      "type": "url",
      "id": "img_url",
      "label": "URL Immagine background"
    },
    {
      "type": "checkbox",
      "id": "video_50",
      "label": "Vuoi il video a 50%?",
      "default": true
    },
    {
      "type": "select",
      "id": "select_option",
      "label": "Versione",
      "options": [
        {
          "value": "yes_overlay",
          "label": "Accendi Overlay"
        },
        {
          "value": "no_overlay",
          "label": "Spegni Overlay"
        }
      ],
      "default": "no_overlay"
    },
    {
      "type": "image_picker",
      "id": "img_cont_down",
      "label": "Immagine in descerizione"
    }
  ],
  "blocks": [
    {
      "type": "link_block",
      "name": "Bottone con freccia",
      "settings": [
        {
          "type": "text",
          "id": "link_text",
          "label": "Testo del bottone"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "URL del bottone"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Overlay full-width video",
      "category": "Custom"
    }
  ]
}
{% endschema %}
