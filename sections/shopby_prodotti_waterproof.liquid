      {% endif %}
      <div class="card_box_bedge">
        <a href="{{ section.settings.prod_wp4_3_top_url }}">SHOW ALL PRODUCTS {% render 'icon-arrow-link-custom' %}</a>
      </div>
    </section>
    <!-- WP2_1 + TOP -->
    <section class="prod_card_box wp2_1 top active">
      {% if section.settings.prod_w2_1_top %}
        {% for product_id in section.settings.prod_w2_1_top %}
          {% if product_id %}
