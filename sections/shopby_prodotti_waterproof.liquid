<section id="section_prodotti_waterproof">
  <div class="page-width controlli">
    <div style="display: flex;gap: 10px;align-items: center;">
      {% render 'icon_waterproof' %}
      <h4 style="color:var(--color-blu);">WATERPROOF</h4>
    </div>
    <!--
      <div>
        <div data-tipo="top" class="cat_btn top posiz active">TOP</div>
        <div data-tipo="bottom" class="cat_btn bottom posiz">BOTTOM</div>
      </div>
    -->
  </div>
  <div class="page-width">
    <div class="frame_linea_visiva waterproof">
      <h4 class="water_value">6</h4>
      <h4 class="water_value">5</h4>
      <h4 class="water_value">4 - 3</h4>
      <h4 class="water_value">2 - 1</h4>
    </div>
    <!-- WP6 + TOP -->
    <section class="prod_card_box wp6 top active">
      {% if section.settings.prod_w6_top %}
        {% for product_id in section.settings.prod_w6_top %}
          {% if product_id %}
            <div class="prod_card_item">
              {% render 'card-product', card_product: product_id %}
            </div>
          {% endif %}
        {% endfor %}
      {% endif %}
      <div class="card_box_bedge">
        <a href="{{ section.settings.prod_w6_top_url }}">SHOW ALL PRODUCTS {% render 'icon-arrow-link-custom' %}</a>
      </div>
    </section>
    <!-- WP5 + TOP -->
    <section class="prod_card_box wp5 top active">
      {% if section.settings.prod_w5_top %}
