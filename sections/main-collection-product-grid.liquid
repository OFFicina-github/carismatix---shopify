{% liquid
  assign total_banner = section.blocks | size
  assign custom_prod_per_page = section.settings.products_per_page | minus: total_banner
  assign position_array = ''

  for block in section.blocks
    if block.type == 'banner'
      if forloop.last == false
        assign pos = block.settings.banner_position | append: ','
        assign position_array = position_array | append: pos
      else
        assign pos = block.settings.banner_position
        assign position_array = position_array | append: pos
      endif
    endif
  endfor
%}

{% assign myArray = position_array | split: ',' %}
{% assign position_index_ordered = '' %}
{% assign zeroFill = '00000000' %}
{% for i in myArray %}
  {% assign thisFill = zeroFill | slice: i.size, zeroFill.size %}
  {% assign newValue = thisFill | append: i | append: ',' %}
  {% assign position_index_ordered = position_index_ordered | append: newValue %}
{% endfor %}
{% assign position_index_ordered = position_index_ordered | split: ',' | sort %}

