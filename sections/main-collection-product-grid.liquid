<script
  type="text/javascript"
>
  window.addEventListener('scroll', () => {
    document.documentElement.style.setProperty('--scroll-y', `${window.scrollY}px`);
  });

  document.getElementById('OpenSidebarBtn').addEventListener('click', function () {
    const mainCollectionFilters = document.getElementById('main-collection-filters');
    const ProductGridContainer = document.getElementById('ProductGridContainer');
    const mainCollectionArea = document.getElementById('mainCollectionArea');
    const filterAccordion = document.querySelectorAll('.facets__disclosure-vertical');
    const screenWidth = window.innerWidth;
    var colWidth = 0;

    for (var i = 0; i < filterAccordion.length; i++) {
      filterAccordion[i].setAttribute('open', '');
    }

    if (screenWidth > 1500) {
      colWidth = 375;
    } else {
      colWidth = screenWidth / 4;
    }

    if (mainCollectionFilters.style.width === '0px') {
      mainCollectionFilters.style.width = colWidth + 'px';
    } else {
      mainCollectionFilters.style.width = '0px';
    }
  });

  document.getElementById('OpenSidebarBtnMob').addEventListener('click', function () {
    const mainCollectionFilters = document.getElementById('main-collection-filters');
    const facetsContainer = mainCollectionFilters.querySelector('.facets-container');
    const facetsCloseBtn = document.getElementById('closeFiltersBtn');
    const screenHeight = window.innerHeight - 40;

    if (mainCollectionFilters.style.height !== '0px') {
      mainCollectionFilters.classList.remove('filtersOpen');
      const body = document.body;
      const scrollY = body.style.top;
      body.style.position = '';
      body.style.top = '';
      body.style.left = '';
      body.style.right = '';
      window.scrollTo(0, parseInt(scrollY || '0') * -1);
      mainCollectionFilters.style.height = '0px';
      facetsContainer.style.display = 'none';
      facetsCloseBtn.style.display = 'none';
    } else {
      mainCollectionFilters.classList.add('filtersOpen');
      const scrollY = document.documentElement.style.getPropertyValue('--scroll-y');
      const body = document.body;
      body.style.position = 'fixed';
      body.style.top = `-${scrollY}`;
      body.style.left = '0';
      body.style.right = '0';
      mainCollectionFilters.style.height = screenHeight + 'px';
      facetsContainer.style.display = 'grid';
      facetsCloseBtn.style.display = 'block';
    }
  });
</script>

