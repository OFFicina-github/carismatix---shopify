{%- style -%}
  #shopify-section-{{ section.id }} #section_titolo_evidenza {
    background-color: var(--color-nero);
    color: var(--color-bianco);
    text-align: center !important;
    padding-top: 20px;
    padding-bottom: 40px;
  }
  #shopify-section-{{ section.id }} #section_titolo_evidenza a:hover {
    text-decoration: underline;
  }
{%- endstyle -%}

<section id="section_titolo_evidenza">
  <p>{{ section.settings.testo }}</p>
  <a href="https://www.slam.com/">slam.com</a>
</section>

{% schema %}
{
  "name": "Footer evidenza",
  "settings": [
    {
      "type": "text",
      "id": "testo",
      "label": "Testo"
    }
  ],
  "presets": [
    {
      "name": "Footer evidenza",
      "category": "Custom"
    }
  ]
}
{% endschema %}