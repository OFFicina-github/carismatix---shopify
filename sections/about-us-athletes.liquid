{%- style -%}
  #shopify-section-{{ section.id }} {
    z-index:1;
    position:relative;
  }
{%- endstyle -%}

<div class="box_team">
  <section
    id="section_slam_team"
    class="full-width"
    style="position:relative;z-index:1;"
  >
    <div class="about_slam_team_wrapper page-width">
      <div class="box a" class="-width">
        <h2 class="h1 italic" style="color: var(--color-blu)">{{ section.settings.about_slam_team_titolo_01 }}</h2>
        <h2 class="h1 italic" style="color: var(--color-blu)">{{ section.settings.about_slam_team_titolo_02 }}</h2>
      </div>

      <div class="box b">
        <h3 style="color: var(--color-blu)">{{ section.settings.about_slam_team_sottotitolo }}</h3>
        <p>{{ section.settings.about_slam_team_testo }}</p>
      </div>
    </div>
  </section>

  <section
    id="section_slam_athletes"
    style="z-index:2;position: relative;"
  >
    <div class="about_slam_athletes_wrapper">
      <div class="box a">
        <p class="etichetta" style="color: var(--color-blu)">{{ section.settings.about_slam_athletes_occhiello }}</p>
        <br>
        <h2 class="about_slam_partnership_titolo">{{ section.settings.about_slam_athletes_titolo_01 }}</h2>
        <h2 class="about_slam_partnership_titolo">{{ section.settings.about_slam_athletes_titolo_02 }}</h2>
        <br>
        <p>{{ section.settings.about_slam_athletes_testo }}</p>
      </div>

      <div class="box b drag-scroll">
        <div class="about_athletes_slider">
          {% for block in section.blocks %}
            <div style="position:relative" class="after_overlay">
              <img
                src="{{ block.settings.athletes_image | image_url }}"
                alt="athletes"
                width="100%"
                height="100%"
                loadinbg="lazy"
              >
              <div class="titles_box">
                <h3 style="color: var(--color-bianco);">
                  {{ block.settings.athletes_nome }}
                </h3>
                <p style="color: var(--color-bianco);">{{ block.settings.athletes_cognome }}</p>
              </div>
              <div class="banner_team">
                <div class="testata after_overlay">
                  <p class="close">Ã—</p>
                  <img
                    src="{{ block.settings.banner_bg | image_url }}"
                    width="100%"
                    height="100%"
                    loadinbg="lazy"
                    alt="SLAM | team"
                  >
                  <div class="titolo_testata">
                    <p class="h1">{{ block.settings.athletes_nome }}</p>
                    {% if block.settings.banner_nazione_img %}
                      <div class="nazionalita">
                        <img
                          src="{{ block.settings.banner_nazione_img | image_url }}"
                          width="100%"
                          height="100%"
                          loadinbg="lazy"
                          alt="SLAM | team"
                        >
                      </div>
                    {% endif %}
                  </div>
                </div>
                <div class="testata_sub">
                  <div class="testata_sub_verde">
                    <div class="testata_sub_item">
                      <p class="label">{{ block.settings.banner_sez_verde_etichetta_01 }}</p>
                      <h4>{{ block.settings.banner_sez_verde_info_01 }}</h4>
                    </div>
                    <div class="testata_sub_item">
                      <p class="label">{{ block.settings.banner_sez_verde_etichetta_02 }}</p>
                      <h4>{{ block.settings.banner_sez_verde_info_02 }}</h4>
                    </div>
                    <div class="testata_sub_item">
                      <p class="label">{{ block.settings.banner_sez_verde_etichetta_03 }}</p>
                      <h4>{{ block.settings.banner_sez_verde_info_03 }}</h4>
                    </div>
                    <div class="testata_sub_item">
                      <p class="label">{{ block.settings.banner_sez_verde_etichetta_04 }}</p>
                      <h4>{{ block.settings.banner_sez_verde_info_04 }}</h4>
                    </div>
                  </div>
                </div>
                <div class="content_team">
                  {% if block.settings.banner_content_titolo_TEAM %}
                    <div class="par_team">
                      <h2>{{ block.settings.banner_content_titolo_TEAM }}</h2>
                      <div class="testo_ricco">
                        {{ block.settings.banner_content_desc_TEAM }}
                      </div>
                    </div>
                  {% endif %}
                  <div class="par_team">
                    <h2>{{ block.settings.banner_content_titolo_01 }}</h2>
                    <div class="testo_ricco p_line">
                      {{ block.settings.banner_content_desc_01 }}
                    </div>
                  </div>
                  <div class="par_team">
                    <h2>{{ block.settings.banner_content_titolo_02 }}</h2>
                    <div class="testo_ricco h3_line">
                      {{ block.settings.banner_content_desc_02 }}
                    </div>
                  </div>
                  <div class="par_team">
                    <h2>{{ block.settings.banner_content_titolo_03 }}</h2>
                    <div class="testo_ricco bold_verde">
                      {{ block.settings.banner_content_desc_03 }}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </section>

  <img class="team_bg" src="{{ section.settings.slam_team_effetto | image_url }}" alt="" style="">
</div>

