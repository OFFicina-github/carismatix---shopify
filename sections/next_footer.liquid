      "label": "Placeholder newsletter"
    },
    {
      "type": "text",
      "id": "label_titolo_newsletter",
      "label": "Label-titolo del form newsletter"
    },
    {
      "type": "text",
      "id": "titolo_newsletter",
      "label": "Titolo form newsletter"
    },
    {
      "type": "text",
      "id": "label_form_newsletter",
      "label": "Label sopra form newsletter"
    },
    {
      "type": "text",
      "id": "titolo_met_pagamento",
      "label": "Titolo metodi di pagamento"
    }
  ],
  "blocks": [
    {
      "type": "social",
      "name": "Blocco icona Social",
      "settings": [
        {
          "type": "image_picker",
          "id": "icona_social",
          "label": "Icona social"
        },
        {
          "type": "url",
          "id": "url_social",
          "label": "URL social"
        }
      ]
    },
    {
      "type": "pagamento",
      "name": "Blocco icona Pagamento",
      "settings": [
        {
          "type": "image_picker",
          "id": "icona_pagamento",
          "label": "Icona metodo pagamento"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer Next",
      "category": "Custom"
    }
  ]
}
