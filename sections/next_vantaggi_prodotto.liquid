<div class="popup_sizechart main">

  {% assign prod_collections = product.collections | map: 'handle' %}
  
  {% if prod_collections %}

    {% assign is_accessories_collection = false %}
    {% assign is_men_collection = false %}
    {% assign is_women_collection = false %}
    {% assign is_kids_collection = false %}

    {% if prod_collections contains 'clothes-and-accesories' or 
      prod_collections contains 'kleidung-und-zubehor' or 
      prod_collections contains 'ropa-y-accesorios' %}
      {% assign is_accessories_collection = true %}
    {% endif %}

    {% if prod_collections contains 'mens-sailing-clothing' or 
      prod_collections contains 'abbigliamento-vela-uomo' or 
      prod_collections contains 'vetements-de-voile-pour-hommes' or 
      prod_collections contains 'herrensegelkleidung' or 
      prod_collections contains 'ropa-de-navegacion-para-hombres' %}
      {% assign is_men_collection = true %}
    {% else %}
      {% assign is_men_collection = false %}
    {% endif %}
    
    {% if prod_collections contains 'womens-sailing-clothing' or 
      prod_collections contains 'abbigliamento-vela-donna' or 
      prod_collections contains 'vetements-de-voile-pour-femmes' or 
      prod_collections contains 'damen-segelkleidung' or 
      prod_collections contains 'ropa-de-navegacion-para-mujeres' %}
      {% assign is_women_collection = true %}
    {% endif %}

    {% if prod_collections contains 'kids-sailing-clothing' or 
      prod_collections contains 'abbigliamento-vela-bambino' or 
      prod_collections contains 'veste-de-voile-pour-enfant' or 
      prod_collections contains 'kinder-segelkleidung' or 
      prod_collections contains 'ropa-de-navegacion-para-ninos' %}
      {% assign is_kids_collection = true %}
    {% endif %}
      
    {% if is_men_collection %}
      <div class="popup_sizechart">
        {% render 'sizechart' %}
      </div>
    {% elsif is_women_collection %}
      <div class="popup_sizechart">
        {% render 'sizechart_donna' %}
      </div>
    {% elsif is_kids_collection %}
      <div class="popup_sizechart">
        {% render 'sizechart_bambini' %}
      </div>
    {% elsif is_accessories_collection %}
      <div class="popup_sizechart">
        {# render 'sizechart_accessori' #}
      </div>
    {% else %}
      <div class="popup_sizechart">
        {% render 'sizechart' %}
      </div>
    {% endif %}

  {% endif %}
</div>


