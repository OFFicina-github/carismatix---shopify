          <p class="etichetta twcss-uppercase twcss-pb-6">{{ attivita }}</p>
          <div class="specifica_inner">
            {% if product.metafields.custom.activities.value contains 'Offshore' %}
              <div class="specifica attivita-offshore">
                <img src="https://cdn.shopify.com/s/files/1/0608/3913/3321/files/off-shore.svg?v=1711379961">
