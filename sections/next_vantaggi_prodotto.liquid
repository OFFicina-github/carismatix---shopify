        </div>
        <div class="target_accordion_item">
          <div class="titolo">
            <h3>
              {% render 'icon_slash_rosso' %}
              <p class="micro">02</p>
              <span>{{ section.settings.target_dett }}</span>
            </h3>
          </div>
